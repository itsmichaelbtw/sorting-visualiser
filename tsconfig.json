{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "es5",
    "module": "es6",
    "outDir": ".build",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "components/**/*",
    "config/**/*",
    "containers/**/*",
    "context/**/*",
    "css/**/*",
    "hooks/**/*",
    "lib/**/*",
    "types/**/*",
    "utils/**/*"
  ],
  "files": ["index.tsx", "index.d.ts"],
  "exclude": ["node_modules", ".build"]
}
