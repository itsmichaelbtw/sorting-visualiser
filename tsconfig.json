{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "ES6",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      ".": ["/*/"]
    }
  },
  "include": [
    "algorithms/**/*",
    "components/**/*",
    "config/**/*",
    "context/**/*",
    "css/**/*",
    "hooks/**/*",
    "lib/**/*",
    "types/**/*",
    "utils/**/*"
  ],
  "files": ["index.tsx", "index.d.ts"],
  "exclude": ["node_modules", ".build"]
}
